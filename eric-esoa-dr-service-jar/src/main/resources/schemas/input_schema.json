{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "title": "D&R Input Configuration Schema",
    "description": "Discovery and Reconciliation Input Configuration Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "inputs": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "$ref": "#/$defs/input"
            }
        }
    },
    "$defs": {
        "input": {
            "type": "object",
            "required": [
                "name"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {},
                "pickList": {}
            },
            "oneOf": [
                {
                    "required": [
                        "value"
                    ]
                },
                {
                    "required": [
                        "pickList"
                    ]
                }
            ]
        }
    },
    "required": [
        "name",
        "inputs"
    ],
    "additionalProperties": false
}