{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "D&R Application Configuration Schema",
  "description": "Discovery and Reconciliation Application Configuration Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "jobs": {
      "description": "",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "discover",
          "reconcile"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "discover": {
            "type": "object",
            "required": [
              "source",
              "filters"
            ],
            "properties": {
              "inputs": {
                "$ref": "#/$defs/inputs"
              },
              "source": {
                "type": "object",
                "required": [
                  "fetchAction"
                ],
                "properties": {
                  "fetchAction": {
                    "$ref": "#/$defs/action"
                  },
                  "enrichAction": {
                    "$ref": "#/$defs/action"
                  }
                }
              },
              "target": {
                "type": [
                  "object",
                  "null"
                ],
                "properties": {
                  "actions": {
                    "type": "object",
                    "properties": {
                      "fetchAction": {
                        "$ref": "#/$defs/action"
                      },
                      "enrichAction": {
                        "$ref": "#/$defs/action"
                      }
                    }
                  }
                }
              },
              "linkSourceAndTarget": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "filters": {
                "type": "object",
                "patternProperties": {
                  "^.*$": {
                    "type": "object",
                    "required": [
                      "reconcileAction",
                      "filterMatchText"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "condition": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "arg": {
                            "type": "string"
                          }
                        }
                      },
                      "filterMatchText": {
                        "type": "string"
                      },
                      "reconcileAction": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "reconcile": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "target"
            ],
            "properties": {
              "inputs": {
                "$ref": "#/$defs/inputs"
              },
              "source": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "enrichAction": {
                    "$ref": "#/$defs/action"
                  }
                }
              },
              "target": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "reconcileActions"
                ],
                "properties": {
                  "enrichAction": {
                    "$ref": "#/$defs/action"
                  },
                  "reconcileActions": {
                    "patternProperties": {
                      "^.*$": {
                        "$ref": "#/$defs/action"
                      }
                    }
                  }
                }
              }
            }
          },
          "api": {
            "type": "object",
            "properties": {
              "properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "jobs"
  ],
  "$defs": {
    "action": {
      "type": [
        "object",
        "null"
      ],
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "enum": [
            "shell",
            "rest",
            "python"
          ]
        },
        "preFunction": {
          "type": [
            "string",
            "null"
          ]
        },
        "outputFormat": {
          "enum": [
            "json"
          ]
        },
        "postFunction": {
          "type": [
            "string",
            "null"
          ]
        },
        "mapping": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "allOf": [
        {
          "if": {
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "const": "shell"
              }
            }
          },
          "then": {
            "required": [
              "command"
            ],
            "properties": {
              "command": {
                "type": "string"
              },
              "properties": {
                "type": "object",
                "properties": {
                  "throwError": {
                    "type": "boolean"
                  },
                  "cmdInteractiveKeyword": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        {
          "if": {
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "const": "rest"
              }
            }
          },
          "then": {
            "required": [
              "properties"
            ],
            "properties": {
              "properties": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string"
                  },
                  "body": {
                    "type": [
                      "string",
                      "object"
                    ]
                  },
                  "connectTimeoutSeconds": {
                    "type": "number"
                  },
                  "readTimeoutSeconds": {
                    "type": "number"
                  },
                  "writeTimeoutSeconds": {
                    "type": "number"
                  }
                },
                "if": {
                  "not": {"required": ["url"]}
                },
                "then": {
                  "properties": {
                    "subsystemName": {
                      "type": "string"
                    },
                    "resource": {
                      "type": "object",
                      "properties": {
                        "resourceConfigurationName": {
                          "type": "string"
                        },
                        "resourceName": {
                          "type": "string"
                        }
                      },
                      "required": ["resourceConfigurationName","resourceName"]
                    }
                  },
                  "required": ["subsystemName","resource"]
                },
                "else": {
                  "properties": {
                    "method": {
                      "type": "string"
                    },
                    "headers": {
                      "type": "object"
                    }
                  },
                  "required": ["method"]
                }
              }
            }
          }
        },
        {
          "if": {
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "const": "constant"
              }
            }
          },
          "then": {
            "required": [
              "properties"
            ],
            "properties": {
              "properties": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        {
          "if": {
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "const": "python"
              }
            }
          },
          "then": {
            "required": [
              "command"
            ],
            "properties": {
              "command": {
                "type": "string"
              },
              "properties": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        }
      ]
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "mandatory": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}